<div class="container">
  <div class="row patient-form">
    <div class="col-12 col-md-6 col-lg-4">
      <h2>Ajouter un nouveau patient</h2>
      <%= simple_form_for(@patient) do |f| %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :address %>
        <%= f.input :compl_address %>
        <%= f.input :phone %>
        <%= f.submit "Ajouter", class: "btn button" %>
      <% end %>
    </div>
  </div>
</div>
