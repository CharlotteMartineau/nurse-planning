<div class="container">
  <div class="row">
    <div class="col-12 col-md-6 col-lg-4">

      <% @visits.each do |visit| %>
        <div class="card-visit">
          <%= link_to visit_path(visit) do %>
            <div class="card-visit-info">
              <h2><%= visit.patient.first_name %> <%= visit.patient.last_name %></h2>
              <p><%= visit.patient.address %></p>
              <p><%= visit.patient.compl_address %></p>
              <p>RDV : <strong><%=visit.wish_time%>h-<%=visit.wish_time+1%>h</strong></p>
              <div>
                <% visit.cares.each do |care| %>
                  <i class="<%= care.icon %> m-2"></i>
                <% end %>
              </div>
            </div>
          <% end %>
          <%= link_to visit_path(visit), method: :patch do%>
            <div class="<%= visit.is_done ? 'done' : 'not-done'%>">
              <i class="fas fa-check"></i>
            </div>
          <% end %>
        </div>
      <% end %>

    </div>
  </div>
</div>
