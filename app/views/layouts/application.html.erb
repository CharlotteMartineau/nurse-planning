<!DOCTYPE html>
<html>
  <head>
    <title>NursePlanning</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>

      <%= render 'shared/flashes' %>

      <%= yield %>


    <div class="d-flex w-100 justify-content-around align-content-center fixed-bottom p-2 mt-2">
      <%= link_to root_path do %><i class="fas fa-home"></i><% end %>
      <%= link_to visits_path do %><i class="fas fa-calendar-day"></i><% end %>
      <%= render 'shared/footer' %>
    </div>
  </body>
</html>
