<div class="footer fixed-bottom">
  <%- if ['dashboards#show', 'patients#index', 'patients#new', 'visits#index'].include?("#{controller_name}##{action_name}")%>
    <%= link_to root_path do %><i class="fas fa-home"></i><% end %>
    <%= link_to visits_path do %><i class="fas fa-calendar-day"></i><% end %>
    <%= link_to new_patient_path do %><i class="fas fa-user-plus"></i><% end %>
    <%= link_to patients_path do %><i class="fas fa-search"></i><% end %>
    <%= link_to nil do %><i class="fas fa-file-download"></i><% end %>
  <%- elsif ['minutes#create', 'visits#show', 'patients#show', 'visits#new'].include?("#{controller_name}##{action_name}")%>
    <%= link_to root_path do %><i class="fas fa-home"></i><% end %>
    <%= link_to visits_path do %><i class="fas fa-calendar-day"></i><% end %>
    <%= link_to new_patient_path do %><i class="fas fa-user-plus"></i><% end %>
    <%= link_to new_visit_path do %><i class="far fa-calendar-plus"></i><% end %>
    <%= link_to nil do %><i class="fas fa-microphone"></i><% end %>
  <%- else %>
    <%= link_to nil do %><i class="fas fa-user-nurse"></i><% end %>
  <% end %>
</div>
