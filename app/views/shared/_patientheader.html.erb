<div class= "buttons">
  <%- if controller_name == 'visits' && action_name == 'show'%>
    <div><%= link_to "Visit", visit_path, class: "button_disabled"%></div>
    <div><%= link_to "Historique", patient_path(@visit.patient), class: "button"%></div>
  <% end %>

  <%- if controller_name == 'patients' && action_name == 'show'%>
    <%= link_to "Visit", visit_path(@patient.visits.last), class: "button"%>
    <%= link_to "Historique", patient_path, class: "button_disabled"%>
  <% end %>
</div>
