<% if visit&.minutes.last %>
  <div class="last_minute">
    <h3>Dernier compte-rendu</h3>
    <div class="minute-content">
      <%= cl_image_tag visit.user.avatar.key, class: "avatar py-3"%>
      <div>
        <p class="text-center"><%=visit.date%></p>
        <p>EnregistrÃ© par <%=visit.user.get_full_name%></p>
        <p><%=visit&.minutes&.last.content%></p>
        <p><%=pluralize (visit&.minutes&.last&.photos.count || 0) "photo"%>
          <% visit&.minutes&.last&.photos.each do |photo| %>
            <%= cl_image_tag(photo.key, size: '50x50', crop: :thumb) %>
          <% end %>
        </p>
      </div>
    </div>
  </div>
<% end %>
